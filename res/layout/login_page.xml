<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical" 
    android:background="#a5a5a5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal" 
        android:background="#a5a5a5"
        android:paddingTop="100sp">

        <ImageView
            android:id="@+id/nameLabel"
            android:src="@drawable/username_label" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="User Name"
            android:textSize="20sp"
            />
       

        <EditText
            android:id="@+id/nameText"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Enter user name"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal" 
        android:background="#a5a5a5"
        android:paddingTop="30sp"
        android:paddingBottom="100sp">

       <ImageView
            android:id="@+id/passwordLabel"
            android:src="@drawable/password_label" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>

        <EditText
            android:id="@+id/passwordText"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Enter password"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:background="@drawable/login_button" 
        android:onClick="goToLogin" />
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal" 
        android:background="#a5a5a5"
        android:paddingTop="200sp"
        android:paddingBottom="100sp">
    
       <ImageView
            android:id="@+id/no_account_image"
            android:src="@drawable/no_account_speech_bubble" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>

       <ImageView
            android:id="@+id/no_account_avatar"
			android:src="@drawable/avatar_unselected" 
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center_horizontal"/>
       </LinearLayout>
</LinearLayout>